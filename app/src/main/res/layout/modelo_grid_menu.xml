<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImvPrato"
            android:layout_width="171dp"
            android:layout_height="171dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-1dp" />

        <TextView
            android:id="@+id/txv"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-160dp"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="-338dp"
            android:layout_toEndOf="@+id/ImvPrato"
            android:background="@color/corTxvPrato"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txvpreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImvPrato"
            android:layout_marginStart="-59dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/ImvPrato"
            android:text="R$"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txvNomeP"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-156dp"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="-338dp"
            android:layout_toEndOf="@+id/ImvPrato"
            android:text="Nome"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TxvRecebePreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImvPrato"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/txvpreco"
            android:text="00"
            android:textColor="?attr/colorBackgroundFloating" />

    </RelativeLayout>

</android.support.v7.widget.CardView>